<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE sqlMap
			PUBLIC "-//ibatis.apache.org//DTD SQL Map 2.0//EN"
			"http://ibatis.apache.org/dtd/sql-map-2.dtd">
<sqlMap namespace="movie">

	<resultMap class="movieVO" id="MovieMainMap">
		<result property="movie_code" column="movie_code"/>
		<result property="movie_title" column="movie_title"/>
		<result property="movie_spectator" column="movie_spectator"/>
	</resultMap>
	
	<select id="getMovieMain" resultMap="MovieMainMap">
		SELECT MOVIE_CODE
		    ,  MOVIE_TITLE
		    ,  MOVIE_SPECTATOR
		FROM   MOVIE
		ORDER BY LENGTH(MOVIE_CODE), MOVIE_CODE
	</select>
</sqlMap>			





