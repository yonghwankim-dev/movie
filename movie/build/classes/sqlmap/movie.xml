		<result property="movNm" column="mov_nm"/>
		<result property="movPd" column="mov_pd"/>
		<result property="movPt" column="mov_pt"/>
		<result property="movPr" column="mov_pr"/>
	</resultMap>
	-->
	
	<select id="getMovieMain" resultMap="MovieMainMap">
		SELECT MOVIE_CODE
		    ,  MOVIE_TITLE
		    ,  MOVIE_SPECTATOR
		FROM   MOVIE
		ORDER BY MOVIE_CODE
	</select>
	
